<div class="container">
  <div class="container">
    <div class="row">
      <h3>Messenger</h3>
      <address>
        <a href="mailto:#">rinykia@gmail.com</a><br>
        <abbr title="Phone">P:</abbr> (050) 607-8017 <br/>
        <div>или оставьте сообщение</div>
        <div class="btn btn-success btn-md glyphicon glyphicon-envelope"><%= link_to ' New Message', "messages/new" %></div>
      </address>
      <% @messages.each do |message| %>
      <div>
        <h2><%= message.content %></h2>
        <i><%= message.created_at %></i><br/>
        <div class="btn btn-success glyphicon glyphicon-pencil btn-xs"> <%= link_to ' Edit', edit_message_path(message) %></div>
        <div class="btn btn-danger glyphicon glyphicon-trash btn-xs"><%= link_to ' Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
      <% end %>
    </div>   
  </div>
</div>  
     
