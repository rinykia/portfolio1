<div class="img">
<div class="show">
<div class="post">
<p id="notice"><%= notice %></p>
<div class="border">
<ul>
<li class="titlep">
 
  <%= @post.title %>
</li>

<li class="bodyp">
  
  <%= @post.body %>
</li>
</ul>
</div>
<div class="commentform">
<h4>Comments</h4>
<div id="comments">
	<%= render :partial => @post.comments.reverse %>
</div>

<%= form_for([@post, Comment.new], remote: true) do |f| %>
	<p><%= f.label :body, "New Comment" %><br/>
		<%= f.text_area :body %>
	</p>
	<p><%= f.submit "Add Comment" %></p>
<% end %>

<div class="redact"><%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %></div>
</div>
</div>
</div>
</div>